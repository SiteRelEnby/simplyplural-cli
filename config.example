# Simply Plural CLI Configuration File
# This file stores your settings and API credentials

# API Configuration
# Get your token from: Simply Plural app -> Settings -> Privacy & Security -> API Tokens
# Required permissions: Read members, Read switches, Write switches, Read front
api_token = ""

# API Settings
# api_timeout = 10                # seconds
# max_retries = 3

# Default Output Format
# Options: human, json, prompt, simple
default_output_format = "human"

# Custom Front Display Settings
# Show type indicators for custom fronts (true/false)
show_custom_front_indicators = true

# Indicator style: "character" (e.g. ^Garnet) or "text" (e.g. Garnet (custom front))
custom_front_indicator_style = "character"

# Character to use for character-style indicators
custom_front_indicator_character = "^"

# Cache Settings (in seconds)
cache_fronters_ttl = 900        # 15 minutes
cache_members_ttl = 3600        # 1 hour
cache_switches_ttl = 1800       # 30 minutes
cache_custom_fronts_ttl = 3600  # 1 hour

# Shell Integration
shell_update_interval = 60      # seconds between background updates
